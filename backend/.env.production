# Production Environment Variables
# Use this for hosting platforms like Railway, Render, Heroku

NODE_ENV=production
PORT=5000
HTTP_PORT=5004
ENABLE_HTTP_REDIRECT=false

# MongoDB Atlas Connection (PRODUCTION)


# CORS Configuration (UPDATE WITH YOUR ACTUAL FRONTEND DOMAIN)
CORS_ORIGIN=https://your-cargo-app.vercel.app

# Additional allowed origins (comma-separated) - UPDATE AS NEEDED
CORS_ORIGINS=https://your-cargo-app.netlify.app,https://your-custom-domain.com

# Rate Limiting (Production values - stricter)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Database
DB_NAME=cargo-capital
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Optional: Email configuration for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
