# VPS Production Environment Variables
# Copy this to .env and update with your actual values

NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection
# Get this from MongoDB Atlas: Clusters -> Connect -> Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/cargo-capital?retryWrites=true&w=majority

# CORS Configuration - UPDATE WITH YOUR ACTUAL DOMAINS
# Add your VPS IP and domain names
CORS_ORIGIN=http://46.224.19.81
CORS_ORIGINS=http://cargocapital.com,https://cargocapital.com,http://www.cargocapital.com,https://www.cargocapital.com,http://46.224.19.81

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database
DB_NAME=cargo-capital

# JWT Secret - CHANGE THIS TO A RANDOM STRING
JWT_SECRET=change-this-to-a-secure-random-string-for-production

# Email Configuration (Optional - for contact form)
# Gmail setup:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@cargocapital.com
ADMIN_EMAIL=admin@cargocapital.com

# Storage Configuration
STORAGE_TYPE=mongodb
# Options: mongodb, file, memory
# Use 'file' if MongoDB connection fails

# SSL Configuration (if using HTTPS directly in Node.js)
# Leave empty if using Nginx as reverse proxy
SSL_KEY_PATH=
SSL_CERT_PATH=
